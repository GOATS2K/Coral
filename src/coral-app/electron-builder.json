{
  "appId": "com.goats2k.coral",
  "productName": "Coral",
  "directories": {
    "output": "dist-electron"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "!electron/native/**/*",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "electron/native",
      "to": "native",
      "filter": ["**/*"]
    }
  ],
  "extraMetadata": {
    "main": "electron/main.js"
  },
  "mac": {
    "category": "public.app-category.music",
    "target": [
      {
        "target": "dmg",
        "arch": ["arm64"]
      },
      {
        "target": "zip",
        "arch": ["arm64"]
      }
    ],
    "icon": "assets/images/icon.png"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "icon": "assets/images/icon.png"
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      }
    ],
    "category": "Audio;AudioVideo;Player",
    "icon": "assets/images/icon.png"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "perMachine": false
  }
}
